{
  "name": "laurels-api",
  "version": "1.0.0",
  "description": "A RESTful API for Laurels-Fashion e-commerce web application.",
  "main": "server.js",
  "scripts": {
    "start": "node dist/server.js",
    "devStart": "nodemon server.ts",
    "dev": "docker-compose up",
    "swagger": "node ./swagger.js",
    "dev:down": "docker-compose down",
    "dev:build": "docker-compose up --build",
    "build": "tsc -p . -d ./dist",
    "migrate:test": "dotenv -e .env.test -- npx prisma migrate dev --name postgres-init",
    "seed:test": "dotenv -e .env.test -- npx prisma db seed",
    "generate:test": "dotenv -e .env.test -- npx prisma generate",
    "test:up": "docker-compose -f docker-compose.test.yml up -d",
    "test:down": "docker-compose -f docker-compose.test.yml down",
    "test": "npm run test:up && sleep 5; npm run migrate:test && npm run seed:test && dotenv -e .env.test jest -- --watchAll",
    "test:circle": "jest -i"
  },
  "prisma": {
    "seed": "ts-node db/seed.ts"
  },
  "keywords": [
    "nodejs",
    "express",
    "prisma",
    "mongodb",
    "api",
    "rest-api"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^3.1.1",
    "@sendgrid/mail": "^7.6.1",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-rate-limit": "^5.4.1",
    "helmet": "^4.6.0",
    "jsonwebtoken": "^8.5.1",
    "nodemailer": "^6.6.5",
    "swagger-ui-express": "^4.6.3"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/express-rate-limit": "^5.1.3",
    "@types/jest": "^27.0.2",
    "@types/jsonwebtoken": "^8.5.5",
    "@types/morgan": "^1.9.3",
    "@types/node": "^16.10.1",
    "@types/nodemailer": "^6.4.4",
    "@types/supertest": "^2.0.11",
    "jest": "^27.2.2",
    "jest-extended": "^0.11.5",
    "jest-mock-extended": "^2.0.4",
    "jest-sorted": "^1.0.12",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.13",
    "prisma": "^3.1.1",
    "supertest": "^6.1.6",
    "swagger-autogen": "^2.23.2",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3"
  }
}
